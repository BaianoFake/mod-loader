{
  "name": "mcm",
  "version": "1.3.1",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "repository": "https://github.com/batata6996/mod-loader",
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "devDependencies": {
    "electron": "^13.1.7",
    "electron-builder": "^22.14.13"
  },
  "build": {
    "appId": "com.example.MCM",
    "productName": "MCM",
    "directories": {
      "output": "dist"
    },
    "files": [
      "index.html",
      "main.js",
      "renderer.js",
      "mods/"
    ],
    "win": {
      "target": "nsis"
    }
  },
  "dependencies": {
    "update-electron-app": "^3.0.0"
  }
}
